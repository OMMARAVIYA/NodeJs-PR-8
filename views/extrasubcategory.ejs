<%- include('header') %>

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Add Category</h1>
                        </div>
                        <form class="user" method="post" action="/AddExtraSubCategory">
                            <div class="form-group ">
                                <input type="hidden" class="form-control form-control-user" name="editid"
                                    id="exampleFirstName" value="<%=single.id%>">
                            </div>
                            <div class="form-group ">
                                <select name="category" class="form-control">
                                    <option value="">---Select Category---</option>
                                    <% category.map((val)=>{ %>
                                        <option <% if(val.id==single.categoryId) { %> selected <% } %> value="<%= val.id
                                                    %>">
                                                    <%= val.category %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="form-group ">
                                <select name="subcategory" class="form-control">
                                    <option value="">---Select SubCategory---</option>
                                    <% subcategory.map((val)=>{ %>
                                        <option <% if(val.id==single.subcategoryId) { %> selected <% } %> value="<%=
                                                    val.id %>">
                                                    <%= val.subcategory %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                            <div class="form-group ">
                                <input type="text" value="<%=single.extrasubcategory%>"
                                    class="form-control form-control-user" name="extrasubcategory" id="exampleFirstName"
                                    placeholder="Add ExtraSubCategory">
                            </div>
                            <% if(single){ %>
                                <button class="btn btn-primary btn-user btn-block" type="submit">Edit</button>
                                <% } else{ %>
                                    <button class="btn btn-primary btn-user btn-block" type="submit">Submit</button>
                                    <% } %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer') %>